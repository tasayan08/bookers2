<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/show', user: @user, book: @book %>
   </div>

<div class="col-md-8 offset-md-1">
 <h2>Users</h2>
<table class="table table-hovertable-inverse">
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
  </tr> 
 </thead> 
 <tbody>
  <% @users.each do |user| %>
  <tr>
   <td><%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %></td>
   <td><%= user.name %></td>
   <td><%= link_to 'Show', user_path(user.id) %></td>
  </tr>
  <% end %>
 </tbody>
 </table>
</div>
</div>
</div>