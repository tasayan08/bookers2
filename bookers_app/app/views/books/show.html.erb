<p id="notice"><%= flash[:update] %></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/show', user: @user, book: @book_new %>     
  </div>      
  
 <div class="col-md-8 offset-md-1">  
  <h2>Book detail</h2>      
 <table class="table table-hovertable-inverse">
 <tbody>
  <tr>
   <td><%= link_to (attachment_image_tag @book.user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg"), user_path(@user.id) %>
    <p><%= link_to @book.user.name, user_path(@user.id) %></p>
   </td>
   <td><%= link_to @book.title, book_path(@book.id) %></td>
   <td><%= @book.body %></td>
   <% if @book.user_id == current_user.id %>
   <td><%= link_to 'Edit', edit_book_path(@book) %></td>
   <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' } %><td>
  <% end %>
  </tr>
 </tbody>
 </table>
 </div>

</div>
</div>
